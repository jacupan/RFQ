    #welcomeNote {                     
        -webkit-animation-name: example; /* Chrome, Safari, Opera */
        -webkit-animation-duration: 4s; /* Chrome, Safari, Opera */
        animation-name: example;
        animation-duration: 4s;
        animation-iteration-count: infinite;
    }

    #div1 {
    
        text-align: center;
        white-space: normal;
        display: inline-block;
        word-wrap: break-word;
    }

    /* Chrome, Safari, Opera */
    @@-webkit-keyframes example {
        0%   {color: red;}
        25%  {color: yellow;}
        50%  {color: orange;}
        75%  {color: blue;}
        100% {color: green;}
    }

    /* Standard syntax */
    @@keyframes example {
        0%   {color: red;}
        25%  {color: yellow;}
        50%  {color: orange;}
        75%  {color: blue;}
        100% {color: green;}
    }

    #rfqImage {
        max-width: 600px;                                
        margin: 20px auto;
        padding-top: 75px;
        background: url('../../content/reqforquote1.jpg') no-repeat center 0;       
    }    
</style>
